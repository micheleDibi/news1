---
import { supabase } from '../lib/supabase';
import { format } from 'date-fns';
import { categories } from '../lib/categories';

// Get latest news
const { data: latestNews } = await supabase
  .from('articles')
  .select('*')
  .eq('isdraft', false)
  .order('published_at', { ascending: false })
  .limit(5);

// Transform articles to include category colors
const transformedNews = latestNews?.map(article => ({
  ...article,
  categoryColor: categories.find(c => c.name === article.category)?.color || 'sport-500'
}));
---

<div class="bg-white rounded-xl shadow-sm pt-6 px-8 pb-8 border-[6px] border-sky-700 mt-8">
  <h2 class="text-lg font-bold mb-4 flex items-center justify-center">
    <svg class="w-5 h-5 mr-2 text-sport-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>
    Ultime Notizie
  </h2>
  
  <div class="relative h-[400px] overflow-hidden hover-pause">
    <div class="news-wrapper">
      {[1, 2, 3].map((_, wrapperIndex) => (
        <div class="news-scroll">
          {wrapperIndex > 0 && (
            <div class="flex justify-center pb-4">
              <div class="w-2/3 h-px bg-gray-300"></div>
            </div>
          )}
          <div class="space-y-4 pb-4">
            {transformedNews?.map((article, index) => (
              <>
                <article class="group">
                  <a href={`/${article.category_slug}/${article.slug}`} class="flex gap-3">
                    <img 
                      src={article.image_url} 
                      alt={article.title}
                      class="w-20 h-20 object-cover rounded-lg"
                    />
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-1">
                        <span class={`text-xs font-semibold text-${article.categoryColor}`}>
                          {article.category}
                        </span>
                        <time class="text-xs text-gray-500">
                          {new Date(article.published_at).toLocaleDateString('it-IT', { day: 'numeric', month: 'short' })}
                        </time>
                      </div>
                      <h3 class="text-sm font-semibold text-gray-900 line-clamp-2 group-hover:text-sport-500 transition-colors">
                        {article.title}
                      </h3>
                    </div>
                  </a>
                </article>
                <div class="flex justify-center">
                  <div class="w-2/3 h-px bg-gray-300"></div>
                </div>
              </>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .news-wrapper {
    position: relative;
    animation: scroll 30s linear infinite;
  }

  .news-scroll {
    position: relative;
  }

  .news-scroll:nth-child(2) {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
  }

  .news-scroll:nth-child(3) {
    position: absolute;
    top: 200%;
    left: 0;
    right: 0;
  }

  @keyframes scroll {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-100%);
    }
  }

  .hover-pause:hover .news-wrapper {
    animation-play-state: paused;
  }
</style>

<script>
  // Adjust scroll speed based on content height
  function adjustScrollSpeed() {
    const wrapper = document.querySelector('.news-wrapper');
    const scrollContainer = document.querySelector('.news-scroll');
    
    if (wrapper && scrollContainer) {
      const containerHeight = scrollContainer.clientHeight;
      const duration = (containerHeight / 30) * 0.6; // Reduced from 2 to 0.6 for ~70% faster speed
      
      (wrapper as HTMLElement).style.animationDuration = `${duration}s`;
    }
  }

  // Run on load and resize
  window.addEventListener('load', adjustScrollSpeed);
  window.addEventListener('resize', adjustScrollSpeed);
</script>