---
interface Props {
  title: string;
  image: string;
  category: string;
  date: string;
  excerpt: string;
  href: string;
}

const { title, image, category, date, excerpt, href } = Astro.props;
---

<article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
  <a href={href}>
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="text-primary text-sm font-semibold">{category}</span>
        <span class="text-gray-500 text-sm">{date}</span>
      </div>
      <h3 class="text-xl font-bold mb-2 line-clamp-2">{title}</h3>
      <p class="text-gray-600 line-clamp-3">{excerpt}</p>
    </div>
  </a>
</article>