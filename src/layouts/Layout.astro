---
import Header from '../components/Header.astro';
import { supabase } from '../lib/supabase';

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  keywords?: string;
}

const { 
  title, 
  description = "EduNews24 - Il portale delle notizie scolastiche, universitarie e della ricerca in Italia", 
  canonicalUrl,
  keywords
} = Astro.props;

// Fetch latest articles for breaking news
const { data: breakingNewsArticles } = await supabase
  .from('articles')
  .select('id, title, slug, category_slug')
  .eq('isdraft', false)
  .order('published_at', { ascending: false })
  .limit(3);

// Get current URL for canonical link
const currentUrl = Astro.url.pathname;
const siteUrl = "https://edunews24.it";
const fullUrl = canonicalUrl || `${siteUrl}${currentUrl}`;
---

<!doctype html>
<html lang="it">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description.replace(/"/g, '&quot;')} />
    {keywords && <meta name="keywords" content={keywords.replace(/"/g, '&quot;')} />}
    <meta name="author" content="EduNews24" />
    <meta name="msvalidate.01" content="4941256B9C3CAD614EE85E23F2053749" />
    <meta name="facebook-domain-verification" content="q6kx042o2rngwqeemuxv2bod9xdsub" />
    
    <!-- Robots and Indexing -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="yandex-verification" content="963c8f839c31d2f5" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={fullUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="it_IT" />
    <meta property="og:site_name" content="EduNews24" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Funnel+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    
    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "NewsMediaOrganization",
        "name": "EduNews24",
        "url": "https://edunews24.it",
        "logo": "https://edunews24.it/logo.png",
        "sameAs": [
          "https://www.facebook.com/EduNews24",
          "https://twitter.com/EduNews24",
          "https://www.instagram.com/edunews_24/"
        ],
        "description": "Il portale delle notizie scolastiche, universitarie e della ricerca in Italia"
      }
    </script>
    
    <!-- Additional head content -->
    <slot name="head" />
    
    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-NL6L8V4P3Z"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      // Set default consent state - Deny analytics storage by default
      gtag('consent', 'default', {
        'analytics_storage': 'denied'
        // Add other storage types if needed, e.g., 'functionality_storage', 'personalization_storage'
      });
      
      gtag('config', 'G-NL6L8V4P3Z');
    </script>

    <!-- Microsoft Clarity -->
    <script type="text/javascript">
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "rc7m2gnv62");
    </script>
  </head>
  <body class="bg-gray-100 font-funnel">
    <Header />
    <slot />
    
    <!-- Breaking News Section (replacing Ad Section) -->
    <div class="bg-breaking text-white py-2 relative overflow-hidden border-y border-gray-200">
      <div class="container mx-auto px-4">
        <div class="flex items-center">
          <span class="font-bold text-sm px-3 py-1 bg-white text-primary mr-4">ULTIMA ORA</span>
          <div class="breaking-news-ticker overflow-hidden flex-1" id="breaking-news">
            <div class="flex whitespace-nowrap animate-ticker">
              {breakingNewsArticles?.map(article => (
                <a 
                  href={`/${article.category_slug}/${article.slug}`}
                  class="inline-block px-8 hover:text-breaking-light transition-colors duration-200"
                >
                  {article.title}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

