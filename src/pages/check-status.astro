---
import Layout from '../layouts/Layout.astro';
import ApiStatusCheck from '../components/ApiStatusCheck';
---

<Layout title="Verifica Stato Richiesta API">
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Verifica Stato Richiesta API
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Inserisci il tuo indirizzo email per verificare lo stato della tua richiesta di accesso API.
        </p>
      </div>
      
      <ApiStatusCheck client:load />
    </div>
  </main>
</Layout> 